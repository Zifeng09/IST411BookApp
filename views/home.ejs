<% include ./partials/header %>

<div class="container"> 
    <div class="ui message">
        <h1 class="ui header">Hello, class of IST411!</h1>
        <p>This is a simple inventory tracking app built with Node.JS, Express and Semantic UI. This site is running on an AWS EC2 instance.</p>
        <a class="ui blue button">Learn more Â»</a>
      </div>
<table class="ui celled padded table">
  <thead>
    <tr><th class="single line">Cover Image</th>
    <th>Book Name</th>
    <th>Author</th>
    <th>Keywords</th>
    <th>ID</th>
    <th>Upload</th>
    <th>Edit</th>
    <th>Delete</th>


  </tr></thead>
  <tbody>
    <% books.forEach(function(book){ %>

    <tr>
      <td>
          <img src="/images/<%=book.id%>.jpg" class="ui small rounded image">
      </td>
      <td class="single line">
          <%=book.name%>
      </td>
      <td class="single line">
          <%=book.author%>
      </td>
      <td class="single line">
          <%=book.handle%>
      </td>
      <td class="single line">
          <%=book.id%>
      </td>
      <td class = "single line"><a href = "/upload/book/<%=book.id%>/"><button type="button" class="ui button orange">Upload Image</button></a>
      </td>
      <td class = "single line"><a href = "/edit/name/<%=book.name%>/author/<%=book.author%>/handle/<%=book.handle%>/id/<%=book.id%>"><button type="button" class="ui button green">Edit</button></a>
      </td>
      <td class = "single line"><a href = "/delete/id/<%=book.id%>"> <button type="button" class="ui button red">Delete</button></a>
      </td>
    </tr>
    
    <% }) %>

  </tbody>
  <tfoot class="full-width">
    <tr>
      <th></th>
      <th colspan="7">
          <div class="ui right floated">
          <a href = "/create"> <button type="button" class="ui button blue right floated">Add Book</button></a>
          </div>
      </th>
    </tr>
  </tfoot>
</table>
</div>

<% include ./partials/footer %>